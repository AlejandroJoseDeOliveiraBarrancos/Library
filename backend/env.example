# Firebase Configuration
# Option 1: Use JSON file (default)
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json

# Option 2: Use individual environment variables (alternative to JSON file)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY_ID=your-private-key-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# FIREBASE_CLIENT_ID=your-client-id
# FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project.iam.gserviceaccount.com

# Google Books API
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here

# Database Configuration
# Option 1: Use single connection string (default)
DATABASE_URL=postgresql://library_user:library_password@db:5432/library_db

# Option 2: Use individual connection parameters (alternative to DATABASE_URL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=library_db
# DB_USER=library_user
# DB_PASSWORD=library_password
# DB_DRIVER=postgresql

# JWT
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins (comma-separated, optional - defaults will be used if not set)
# CORS_ORIGINS=http://localhost:3000,http://localhost:80

