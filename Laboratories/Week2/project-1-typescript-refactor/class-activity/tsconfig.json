{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "esnext",
    "types": [
      "node"
    ], // <-- Add this line
    "lib": [
      "esnext"
    ], // <-- Optional, but recommended
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true // <-- Remove trailing comma
  }
}